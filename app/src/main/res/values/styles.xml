<resources>

    <style name="AppTheme.Theme" parent="AppTheme" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/body_text</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_arrow_back</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow
        </item>
    </style>

    <style name="AppTheme.Theme.NoActionBar" parent="AppTheme.Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Theme.NoActionBar.Dark" parent="AppTheme.Theme.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.Theme.NoActionBar.Fullscreen" parent="AppTheme.Theme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:displayOptions">showCustom</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="AppTheme.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
